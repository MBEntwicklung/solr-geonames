<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http:/java.sun.com/dtd/web-app_2_3.dtd">
    <servlet>
        <servlet-name>geonames</servlet-name>
        <servlet-class>com.googlecode.solrgeonames.server.GeoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>geonames</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>com.googlecode.solrgeonames.server.GeoContextListener</listener-class>
    </listener>
</web-app>
